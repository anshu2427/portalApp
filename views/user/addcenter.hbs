         <form action="/user/addcenter" enctype="multipart/form-data" method="post">
   <div class="form-group border border-info rounded-top  clearfix">
<br>  
      <label for="centername">&nbsp;Center Name:</label>
      <input type="text" class="form-control" id="centername" name="centername" placeholder="Enter Center Name"><br>
	  
	  <label for="centermobile">&nbsp;Mobile Number:</label>
      <input type="text" class="form-control" id="centermobile" name="centermobile" placeholder="Enter Mobile Number"><br>
	  
	  <label for="centerphone">&nbsp;Phone Number:</label>
      <input type="text" class="form-control" id="centerphone" name="centerphone" placeholder="Enter Phone Number"><br>
       
      <label for="centeremail">&nbsp;Email:</label>
      <input type="email" class="form-control" id="centeremail" name="centeremail" placeholder="Enter Email Id"><br>

      <label for="directorname">&nbsp;Director Name:</label>
      <input type="text" class="form-control" id="directorname" name="directorname" placeholder="Enter Director Name" required="directorname"></input><br>
	  
	  <label for="centerlandmark">&nbsp;Landmark:</label>
      <input type="text" class="form-control" id="centerlandmark" name="centerlandmark" placeholder="Enter Landmark" required="centerlandmark"></input><br>
	  
	  <label for="centeraddress">&nbsp;Address:</label>
      <input type="text" class="form-control" id="centeraddress" name="centeraddress" placeholder="Enter Branch Address"></input><br>
	  
	  <label for="centerimage"><h6>&nbsp;Center Image: </h6>&nbsp;(Only supports jpeg, jpg or png format.)</label>
    <input type="file" class="form-control" id="centerimage" name="centerimage" placeholder="Upload Image" required="centerimage">
	  
      
	  <br>
    <button type="submit" class="btn btn-primary btn-block">Submit</button>
	    </div>
  </form>
