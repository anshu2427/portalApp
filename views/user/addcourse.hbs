<div class="container-fluid">
  <div class="row">
    <nav class="col-sm-3 col-md-2 d-none d-sm-block bg-light sidebar">
      <ul class="nav nav-pills flex-column">
        <li class="nav-item">
          <a class="nav-link active" href="/user/adminhome">Overview <span class="sr-only">(current)</span></a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/user/addcover">Add Cover Photos &amp; News/Event</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/user/addcourse">Add New Course</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/user/addcenter">Add New Center</a>
        </li>
      </ul>

      <ul class="nav nav-pills flex-column">

        <li class="nav-item">
          <a class="nav-link" href="/user/showregistera">Show All Registrations</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/user/shownewsa">Show News &amp; Event</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/showcenters">Show All Centers</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/showcourse">Show All Courses</a>
        </li>
      </ul>

      <ul class="nav nav-pills flex-column">
       <li class="nav-item">
        <a class="nav-link" href="/user/uploadresult">Upload Result</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="/user/showuploadresulta">Show Upload Result</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="/user/showcontact">Show Contact Us </a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="/user/adminsettings">Admin Settings</a>
      </li>
    </ul>
  </nav>
  <main role="main" class="col-sm-9 ml-sm-auto col-md-10 pt-3">
    <h2 class="text-center">Add Courses</h2>
    {{#if hasErrors}}
    <div class="alert alert-danger">
      {{# each messages }}
      <p>{{this}}</p>
      {{/each}}
    </div>
    {{/if}}
    <hr class="featurette-divider">

    <form method="post" action="/user/addcourse">
     <div class="form-group border border-info rounded-top  clearfix">
      <br>  

      <label for="maincourse">&nbsp;Main Course Name:</label>
      <select name="maincourse">
        <option id = "csc" value="Computer Software Courses">Computer Software Courses</option>
        <option id = "chc" value="Computer Hardware Courses">Computer Hardware Courses</option>
        <option id = "ec" value="Electronic Courses">Electronic Courses</option>
        <option id = "rac" value="Refrigeration / Air Conditioning">Refrigeration / Air Conditioning</option>
        <option id = "ee" value="Electrical Courses">Electrical Courses</option>
        <option id = "ecc" value="Special Capsule Courses">Special Capsule Courses</option>
        <option id = "isc" value="Industrial Safety Courses">Industrial Safety Courses</option>
      </select>
      <br>
      <br>
      <label for="cn">&nbsp;Sub-Course Name:</label>
      <input type="text" class="form-control" id="cn" name="cn" placeholder="Enter Course"><br>

      <label for="tsc">&nbsp;Duration :</label>
      <input type="text" class="form-control" id="tsc" name="tsc" placeholder="Enter Course Duration"><br>

      <label for="bcn">&nbsp;Branch (Center) Name:</label>
      <input type="text" class="form-control" id="bcn" name="bcn" placeholder="Enter Branch (Center) Name"><br>

      <label for="td1">&nbsp;Training Description 1:</label>
      <textarea type="text" class="form-control" id="td1" name="td1" placeholder="Enter  Training Description"></textarea><br>

      <label for="td2">&nbsp;Training Description 2:</label>
      <textarea type="text" class="form-control" id="td2" name="td2" placeholder="Enter  Training Description"></textarea><br>

      <label for="td3">&nbsp;Training Description 3:</label>
      <textarea type="text" class="form-control" id="td3" name="td3" placeholder="Enter  Training Description"></textarea><br>

      <label for="td4">&nbsp;Training Description 4:</label>
      <textarea type="text" class="form-control" id="td4" name="td4" placeholder="Enter  Training Description"></textarea>
      
      <br>
      <button type="submit" class="btn btn-primary btn-block">Submit</button>
    </div>
  </form>
</main>
</div>
</div>