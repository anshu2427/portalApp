  
  <link rel="stylesheet" href="/stylesheets/registration.css" >
  <div class="container" style="width:700px">  
  <form class="form-control" action="/registrationForm" method="post">
   <div class="form-group border border-info rounded-top clearfix">
     <h2>Registration form</h2>
      {{#if hasErrors}}
            <div class="alert alert-danger">
                {{#each messages }}
                    <p>{{this}}</p>
                {{/each}}
            </div>
        {{/if}}
     <hr class="featurette-divider">
  <label for="branch">Branch/Center:</label>
  <select class="form-control" id="branch" name="branch" required="branch">
    <option selected disabled>Select Branch</option>
        {{#each regist761}}
    <option>{{this.centername}}</option>
    {{/each}}
  </select><br>
  <label for="course">Course:</label>
  <select class="form-control" id="course" name="course" required="course">
    <option selected disabled>Select Course</option>
    <option>Computer Software Courses</option>
        <option>Computer Hardware Courses</option>
            <option>Electronic Courses</option>
                <option>Refrigeration / Air Conditioning</option>
                   <option>Special Capsule Courses</option>
                      <option>Industrial Safety Courses</option>
  </select><br>
  <label for="training">Sub-course :</label>
  <select class="form-control" id="training" name="training" required="training">
    <option selected disabled>Select sub course</option>
      {{#each regist}}
    <option>{{this.subcoursename}}</option>
    {{/each}}
  </select><br>
      <label for="fullname">Full Name:</label>
      <input type="text" class="form-control" id="fullname" name="fullname" placeholder="Enter Full Name"><br>
   
   
      <label for="qualification">Qualification:</label>
      <input type="text" class="form-control" id="qualification" name="qualification" placeholder="Enter Qualification" required="qualification"><br>
   
      <label for="dob">Date of Birth:</label>
      <input type="date" class="form-control" id="dob" name="dob" placeholder="Enter DOB"><br>
    
      <label for="email">Email:</label>
      <input type="email" class="form-control" id="email" name="email" placeholder="Enter Email"><br>

      <label for="address">Address:</label>
      <textarea type="text" class="form-control" id="address" name="address" placeholder="Enter Address"></textarea><br>
      <label for="contact">Contact Number:</label>
      <input type="text" class="form-control" id="contact" name="contact" placeholder="Enter Contact Number">
	  <br>
    <button type="submit" class="btn btn-primary btn-block">Submit</button>
	    </div>

  </form>

    


</div>