<main role="main" class="col-sm-9 ml-sm-auto col-md-10 pt-3">
  <h2>Show All Courses</h2>
  <div class="table-responsive">
    <table class="table table-bordered table-dark">
      <thead>
        <tr>

         <th scope="col">Course Name</th>
         <th scope="col">Sub-course Name</th> 
         <th scope="col">Duration</th> 
     <!--<th scope="col">Branch/Center</th> -->
         <th scope="col">Training Description 1</th>
         <th scope="col">Training Description 2</th>
         <th scope="col">Training Description 3</th>
         <th scope="col">Training Description 4</th>
         <th scope="col">Edit</th>
         <th scope="col">Delete</th>
       </tr>
     </thead>


     <tbody>
      {{#each regist}}
      <tr>
        <td>{{this.maincoursename}}</td>
        <td>{{this.subcoursename}}</td>
        <td>{{this.tsc}}</td>
    <!--<td>{{this.bcn}}</td>-->
        <td>{{this.td1}}</td>
        <td>{{this.td2}}</td>
        <td>{{this.td3}}</td>
        <td>{{this.td4}}</td>
        <td><a class="btn btn-primary" role="button" href='/coursedetails1/{{this._id}}' >EDIT</a></td>
        <td><a class="btn btn-danger delete-course" role="button" href='#' data-id={{this._id}} >DELETE</a></td>

      </tr>
      {{/each}}
