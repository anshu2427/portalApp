<main role="main" class="col-sm-9 ml-sm-auto col-md-10 pt-3">
  <h2> Upload Result</h2>
  {{#if hasErrors}}
  <div class="alert alert-danger">
    {{# each messages }}
    <p>{{this}}</p>
    {{/each}}
  </div>
  {{/if}}
  <hr class="featurette-divider">

  <form action="/user/uploadresult" enctype="multipart/form-data" method="post">
   <div class="form-group border border-info rounded-top  clearfix">
    <br>  


    <label for="rstudentname">&nbsp;Student Name:</label>
    <input type="text" class="form-control" id="rstudentname" name="rstudentname" placeholder="Enter Student Name"><br>

    <label for="rrollnumber">&nbsp;Roll Number:</label>
    <input type="text" class="form-control" id="rrollnumber" name="rrollnumber" placeholder="Enter a 6 digits valid roll number."></input><br>

    <label for="rcourse">&nbsp;Course:</label>
    <input type="text" class="form-control" id="rcourse" name="rcourse" placeholder="Enter Course" required="rcourse"><br>

    <label for="ryear">&nbsp;Certification Completion Year (Session):</label>
    <input type="text" class="form-control" id="ryear" name="ryear" placeholder="Enter a valid year, like 2018. "></input><br>
    
    <label for="rdob">&nbsp;Date of Birth:</label>
    <input type="date" class="form-control" id="rdob" name="rdob" placeholder="Enter DOB"><br>
    
    <label for="rdoj">&nbsp;Date of Joining:</label>
    <input type="date" class="form-control" id="rdoj" name="rdoj" placeholder="Enter a valid date of joining before present date."><br>

    <label for="rfathername">&nbsp;Father's Name:</label>
    <input type="text" class="form-control" id="rfathername" name="rfathername" placeholder="Enter Father's Name" required="rfathername"></input><br>

    <label for="uploadmarksheet"><h5>&nbsp;Upload Marksheet :</h5>&nbsp;(Only support jpeg, jpg or png formats.)</label>
    <input type="file" class="form-control" id="uploadmarksheet" name="uploadmarksheet" placeholder="Upload Marksheet" required="uploadmarksheet"></input><br>
    
    <label for="uploadmarksheet"><h5>&nbsp;Upload Certificate :</h5>&nbsp;(Only support jpeg, jpg or png formats.)</label>
    <input type="file" class="form-control" id="uploadcertificate" name="uploadcertificate" placeholder="Upload Certificate" required="uploadcertificate"></input>

    <br>
    <button type="submit" class="btn btn-primary btn-block">Submit</button>
  </div>
</form>
